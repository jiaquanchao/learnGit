<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.ognl.allowStaticMethodAccess" value="true"/> 
	<constant name="struts.action.extension" value="both" />
	<constant name="struts.enable.DynamicMethodInvocation" value="false"/>
	<constant name="struts.serve.static.browserCache" value="false"></constant>
	
	<!-- 新建一个 news package -->
	 <package name="people" namespace="/people" extends="struts-default">
    
    	<global-results>
    		<result name="message">/WEB-INF/pages/message.jsp</result>
    	</global-results>
    	
    	<action name="action_*" class="com.bothtimes.action.PeopleAction" method="{1}">
    		<result name="peopleList">/WEB-INF/pages/peopleList.jsp</result>
    		<result name="hideList">/WEB-INF/pages/hideList.jsp</result>
    		<result name="add">/WEB-INF/pages/peopleAdd.jsp</result>	
    		<result name="update">/WEB-INF/pages/peopleUpdate.jsp</result>
    	</action>
    </package>
    <package name="city" extends="struts-default">
    
    	<global-results>
    		<result name="messages">/WEB-INF/pages/messages.jsp</result>
    	</global-results>
    	
    	<action name="action_*" class="com.bothtimes.action.CityAction" method="{1}">
    		<result name="cityList">/WEB-INF/pages/cityList.jsp</result>		
    		<result name="cityAdd">/WEB-INF/pages/cityAdd.jsp</result>
    		<result name="update">/WEB-INF/pages/cityUpdate.jsp</result>
    	</action>
    </package>
    
</struts>